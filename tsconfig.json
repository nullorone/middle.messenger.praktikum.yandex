{
    "ts-node": {
      "files": true
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "exclude": [
        "node_modules",
        "dist"
    ],
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": false,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [
          "ESNext",
          "DOM"
        ],
        "rootDir": "./src",
        "outDir": "./dist",
    }
}
