<div class="container chat-page">
    <div class="panel">
        <nav class="panel__nav">
            <a href="#" class="panel__link">Профиль</a>
        </nav>
        <form action="#" class="panel__form form-panel">
            <fieldset class="form-panel__field">
                <input id="search" type="text"  required class="form-panel__input">
                <label for="search" class="form-panel__label">Поиск</label>
            </fieldset>
        </form>
        <ul class="panel__list">
            {{#each panelItems}}
                {{{this}}}
            {{/each}}
        </ul>
    </div>
    <div class="chat-page__block">
        <p class="chat-page__text">Выберите чат, чтобы отправить сообщение</p>
    </div>
    <div class="chat-page__chat-block chat hide">
        <header class="chat__header chat-header">
            <div class="chat-header__block">
                <img src="#" alt="Аватарка пользователя" class="chat-header__img">
                <p class="chat-header__text">Вадим</p>
            </div>
            <div class="chat-header__option-wrapper">
                <span class="chat-header__option-icon">Иконка опций</span>
                <div class="chat-header__option-block option-block">
                    <ul class="option-block__list">
                        {{#each optionItems}}
                            {{{this}}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </header>
        <main class="chat__main chat-main">
            <span class="chat-main__timestamp">19 июля</span>
            <ul class="chat-main__list">
                {{#each mainItems}}
                    {{{this}}}
                {{/each}}
            </ul>
        </main>
        <footer class="chat__footer chat-footer">
            <div class="chat-footer__media">
                <span class="chat-footer__media-icon">Иконка медиа файлов</span>
                <div class="chat-footer__media-block media-block">
                    <ul class="media-block__list">
                        {{#each optionMediaItems}}
                            {{{this}}}
                        {{/each}}
                    </ul>
                </div>
            </div>
            <form action="#" class="chat-footer__form form-chat">
                <fieldset class="form-chat__field">
                    <input id="message" name="message" type="text" required class="form-chat__input">
                    <label for="message" class="form-chat__label">Сообщение</label>
                    <span class="form-chat__tip">Сообщение не должно быть пустым</span>
                </fieldset>
                <button type="submit" class="form-chat__button">Отправить сообщение</button>
            </form>
        </footer>
    </div>
</div>
<dialog {{#if isModal}}open{{/if}} class="modal modal-chat">
    <form action="#" class="modal-chat__form form-modal">
        <p class="form-modal__text">{{#if isAddUser}}Добавить{{else}}Удалить{{/if}} пользователя</p>
        {{{authField}}}
        {{{button}}}
    </form>
</dialog>
